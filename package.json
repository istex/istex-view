{
  "name": "istex-view",
  "version": "2.5.3",
  "description": "Visualisation interactive des documents ISTEX",
  "private": true,
  "scripts": {
    "watch-js": "watchify -d www/src/main.jsx -t [ babelify --sourceMapsAbsolute ] --outfile www/dist/bundle.js -v",
    "watch-less": "watch 'lessc www/less/*.less > www/dist/bundle.css && echo \"-> bundle.css written\"' ./www/less/",
    "serve": "http-server -p 8080 -s -c 1 www/",
    "dev": "npm-run-all --parallel watch-js watch-less serve help",
    "help": "sleep 1 && echo '' && echo '\\033[107;33;7m --> Open \\033[1mhttp://127.0.0.1:45445\\033[0m\\033[107;33;7m in your browser for testing (through Nginx). \\033[0m'",
    "build": "npm run build-js && npm run build-css",
    "build-js": "NODE_ENV=production browserify www/src/main.jsx -t babelify | uglifyjs > www/dist/bundle.js",
    "build-css": "lessc --clean-css='--compatibility=ie8 --advanced' www/less/*.less > www/dist/bundle.css",
    "lint": "eslint --ext .js,.jsx www/src",
    "insertversion:index": "sed -i \"s#\\(\\?v=\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" www/index.html",
    "insertversion:footer": "sed -i \"s#\\(version \\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" www/src/components/footer.jsx",
    "insertversion:readme": "sed -i \"s#\\(istex/istex-view:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" README.md",
    "insertversion:docker-compose": "sed -i \"s#\\(image: istex/istex-view:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" docker-compose*.yml",
    "insertversion:makefile": "sed -i \"s#\\(istex/istex-view:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" Makefile",
    "preversion": "#npm run lint",
    "version": "npm run insertversion:index && npm run insertversion:footer && npm run insertversion:readme && npm run insertversion:docker-compose && npm run insertversion:makefile && git add www/index.html www/src/components/footer.jsx docker-compose*.yml Makefile README.md",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-text-truncate": "^0.8.3"
  },
  "devDependencies": {
    "babel-core": "6.24.1",
    "babel-plugin-remove-comments": "^2.0.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "6.23.0",
    "babelify": "7.3.0",
    "browserify": "14.3.0",
    "eslint": "^3.19.0",
    "eslint-plugin-html": "2.0.1",
    "eslint-plugin-react": "6.10.3",
    "http-server": "^0.11.1",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "4.0.2",
    "uglify-js": "^2.8.22",
    "watch": "^1.0.2",
    "watchify": "^3.9.0"
  }
}
