{
  "name": "istex-view",
  "version": "2.4.11",
  "description": "Visualisation interactive des documents ISTEX",
  "private": true,
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1",
    "pdfjs-dist": "^1.9.528",
    "react": "^15.6.1",
    "react-bootstrap": "^0.31.3",
    "react-dom": "^15.6.1",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-scripts": "1.0.13",
    "react-text-truncate": "^0.8.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "insertversion:index": "sed -i \"s#\\(\\?v=\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" public/index.html",
    "insertversion:footer": "sed -i \"s#\\(version \\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" src/components/footer.jsx",
    "insertversion:readme": "sed -i \"s#\\(istex/istex-view:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" README.md",
    "insertversion:docker-compose": "sed -i \"s#\\(image: istex/istex-view:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" docker-compose.yml",
    "version": "npm run insertversion:index && npm run insertversion:footer && npm run insertversion:readme && npm run insertversion:docker-compose && git add public/index.html src/components/footer.jsx docker-compose.yml README.md",
    "postversion": "git push && git push --tags"
  }
}
