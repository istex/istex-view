{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"includes": [
			"**/*.{css,json,md,ts,tsx,yaml,yml}",
			"!**/{.turbo,dist,playwright-report,test-results}"
		]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "error",
				"useExhaustiveDependencies": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			},
			"suspicious": {
				"noUnknownAtRules": "off",
				"noConsole": {
					"level": "error",
					"options": {
						"allow": ["error", "warn"]
					}
				},
				"useAwait": "error"
			}
		}
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	}
}
