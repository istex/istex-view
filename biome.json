{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"includes": [
			"*.{json,md,ts,yaml}",
			".github/**/*.{yml,md}",
			".vscode/*.json",
			"{e2e,packages}/**/*.{css,json,ts,tsx}",
			"!packages/**/dist/*.{js,ts}"
		]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	}
}
