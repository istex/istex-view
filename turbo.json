{
	"$schema": "https://v2-8-1.turborepo.dev/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"inputs": ["src/**", "tsconfig.lib.json", "package.json"],
			"cache": true,
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"inputs": [
				"src/**",
				"tsconfig.json",
				"tsconfig.app.json",
				"tsconfig.node.json",
				"package.json"
			],
			"outputs": ["dist/**"],
			"cache": false,
			"persistent": true
		},
		"preview": {
			"inputs": [
				"src/**",
				"tsconfig.json",
				"tsconfig.app.json",
				"tsconfig.node.json",
				"package.json"
			],
			"outputs": ["dist/**"],
			"cache": false,
			"persistent": true,
			"dependsOn": ["build"]
		},
		"e2e": {
			"inputs": [
				"src",
				"package.json",
				"playwright.config.ts",
				"tsconfig.json"
			],
			"cache": false,
			"persistent": false
		},
		"e2e:ui": {
			"inputs": [
				"src",
				"package.json",
				"playwright.config.ts",
				"tsconfig.json"
			],
			"cache": false,
			"persistent": true
		},
		"typecheck": {}
	}
}
